    <div class="Transbox">
        <header>
            <h1 class="display-5">Información Personal</h1>
        </header>
        <hr>

        <Body>
            <div class="row">

                <form asp-page-handler="create" method="post">
                    <div class="FormContainer">
                        <label for="NombreVeterinario">Nombre Completo</label>
                        <input name="NombreVeterinario" class="FormInput" id="NombreGalpon"
                            placeholder="Nombre y Apellido">
                        <span asp-validation-for=persona.Nombre class="text-danger"></span>

                        <label for="Telefono">Telefono</label>
                        <input name="Telefono" class="FormInput" id="NumeroAGalpon" placeholder="(000) 000 0000">


                        <label for="genero">Genero</label>
                        <select name="genero" class="FormInput" id="Genero">
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Bisexual">Bisexual</option>
                            <option value="Intersexual">Intersexual</option>
                            <option value="Pansexual">Pansexual</option>
                            <option value="Transexual">Transexual</option>
                        </select>

                        <label for="correo">Correo</label>
                        <input type="correo" class="FormInput" id="NumeroAGalpon" placeholder="Ejemplo@mail.com">
                        <span asp-validation-for=persona.Correo class="text-danger"></span>

                    </div>

                    @* </div> *@
                    <button type="submit" class="btn btn-outline-secondary">
                        Registrar
                        @*<input type="submit"> @*Input metido en el botton *@
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-person-plus" viewBox="0 0 16 16">
                            <path
                                d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            <path fill-rule="evenodd"
                                d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                        </svg>
                    </button>
                </form>


                @if (Model.upload)
                {
                    <div style="padding-left: 50px;">
                        <h3 class="clearfix">@Model.Message</h3>
                        <p>ID Veterinario: <strong>@Model.Temporal.Id_Persona</strong></p>
                        <p>Nombre Veterinario: <strong>@Model.Temporal.Nombre</strong></p>
                        <p>Telefono: <strong>@Model.Temporal.Telefono</strong></p>
                        <p>Correo: <strong>@Model.Temporal.Correo</strong></p>
                        <p>Genero: <strong>@Model.Temporal.Genero</strong></p>
                    </div>
                }
            </div>
        </Body>
    </div>

