                </div>
                
                


                @if (Model.searchQueried)
                {
                    
                    @if (Model.persona == null || Model.persona.ID_Rol.Equals(2))
                    {
                        <h3 class="clearfix">@Model.Message</h3>
                        <img src="https://i.ytimg.com/vi/HR7L_mOsa80/maxresdefault.jpg" alt="GODDAMMIT KRISS"
                    style="width:700px;height:500px;">
                    }
                    else
                    {
                        if (Model.persona.ID_Rol.Equals(1))
                        {
                            <div style="margin-bottom: 2rem;">
                                <Table class="infoTable">
                                    <tr>
                                        <th>Nombres:</th>
                                        <td id="OperarioNombre">@Model.persona.Nombre</td>
                                    </tr>
                                    <tr>
                                        <th>Telefono:</th>
                                        <td id="OperarioTelefono">@Model.persona.Telefono</td>
                                    </tr>
                                    <tr>
                                        <th>Genero:</th>
                                        <td id="OperarioGenero">@Model.persona.Genero</td>
                                    </tr>
                                    <tr>
                                        <th>Correo:</th>
                                        <td id="OperarioTelefono">@Model.persona.Correo</td>
                                    </tr>
                                    <tr style="border-top: 3px solid #aaaaaa;">
                                        <th>ID Galpón Asignado:</th>
                                        <td id="GalponAsignado">
                                            
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Nombre Galpón:</th>
                                        <td id="GalponNombre"></td>
                                        
                                    </tr>
                                </Table>
                            </div>

                        }
                    }
                }


                <div style="display: flex; justify-content: space-around;">
                    @if (Model.persona != null && Model.searchQueried)
                    {
                        <form asp-page-handler="Update_get" method="post">
                            <input type="hidden" name="TempID" asp-for="persona.Id_Persona">
                            <button class="btn btn-outline-secondary">
                                Editar
