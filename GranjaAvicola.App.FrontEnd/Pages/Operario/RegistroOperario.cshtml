@page
@model GranjaAvicola.App.FrontEnd.Pages.RegistroOperarioModel
@{
    <title>@ViewData["Title"]Operarios</title>
}

@* Titulo *@
<div class="Transbox text-center" style="padding: 10px;">
    <h1 class="display-5"> Registro Operario </h1>
</div>
@* Un div pa meterle las 2 columnas *@
<div class="BoxContainer">
    @* 
        div para info personal 
        TODO: Hay que ajustar los ID de cada input. 
        TODO: Hay que volver los elementos de ahi Responsive utilizando Media Queries en el CSS
     *@
    <div class="Transbox">
        <header>
            <h1 class="display-5">Información Personal</h1>
        </header>
        <hr>
        <Body>
            <div class="FormContainer">
                <label for="Name">Nombre Completo</label>
                <input name="Name"      class="FormInput" id="NombreGalpon"   value="Nombre y Apellido">
                
                <label for="Phone">Telefono</label>
                <input name="Phone"     class="FormInput" id="NumeroAGalpon"  value="(000) 000 0000">
                
                <label for="genero">Genero</label>
                <select name="genero" class="FormInput" id="Genero">
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Bisexual">Bisexual</option>
                    <option value="Intersexual">Intersexual</option>
                    <option value="Pansexual">Pansexual</option>
                    <option value="Transexual">Transexual</option>
                </select>
                
                <label for="text">Correo</label>
                <input type="email"     class="FormInput"    id="NumeroAGalpon" value="Ejemplo@mail.com">
            </div>
            <button type="button" class="btn btn-outline-secondary">
                Registrar 
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                    <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                </svg>
            </button>
        </Body>
    </div>

    <div class="Transbox">
        <header>
            <h1 class="display-5">Busqueda</h1>
        </header>
        <hr>
        <body>
            <div class="FormContainer">
                <div>
                    <label for="SearchOperary" style="padding-right: 1rem;">Buscar Opeario</label>
                    <input name="SearchOperary" list="SearchGalponID" class="FormInput" id="ComboBox" value="-Buscar ID Operario-">
                    <datalist id="SearchGalponID">
                        <option value="0001"></option>
                        <option value="0002"></option>
                        <option value="0003"></option>
                        <option value="0004"></option>
                    </datalist>    
                    <button type="button" class="btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </button>
                </div>
                <div style="margin-bottom: 2rem;">
                    <Table class="infoTable">
                        <tr>
                            <th>Nombres:</th>
                            <td id="OperarioNombre">null</td>
                        </tr>
                        <tr>
                            <th>Telefono:</th>
                            <td id="OperarioTelefono">null</td>
                        </tr>
                        <tr>
                            <th>Genero:</th>
                            <td id="OperarioGenero">null</td>
                        </tr>
                        <tr>
                            <th>Correo:</th>
                            <td id="OperarioTelefono">null</td>
                        </tr>
                        <tr style="border-top: 3px solid #aaaaaa;">
                            <th>ID Galpón Asignado:</th>
                            <td id="GalponAsignado">null</td>
                        </tr>
                        <tr>
                            <th>Nombre Galpón:</th>
                            <td id="GalponNombre">null</td>
                        </tr>
                    </Table>
                </div>
                <div style="display: flex; justify-content: space-around;">
                    <button type="button" class="btn btn-outline-secondary">
                        Editar
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg> 
                    </button>
                    <button type="button"  class="btn btn-outline-danger">
                        Eliminar 
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-octagon" viewBox="0 0 16 16">
                            <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353L4.54.146zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1H5.1z"/>
                            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
                        </svg>
                    </button>
                </div>
            </div> 
        </body>
    </div>
</div>