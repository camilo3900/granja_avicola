@page
@model GranjaAvicola.App.FrontEnd.Pages.RegistroVariablesModel
@{
    <title>@ViewData["Title"]Variables</title>
}

<div class="Transbox text-center" style="padding: 10px;">
    <h1 class="display-5"> Registro Variables </h1>
</div>

<div class="BoxContainerLine">
    <div class="Transbox">
        <header>
            <h1 class="display-5">Seleccionar Operario</h1>
        </header>
        <hr>

        <body>

            <div class="FormContainer">
                <div>
                    <form asp-page-handler="read" method="post">
                        <label for="lolaso" style="padding-right: 1rem;">Buscar Operario</label>
                        <input name="lolaso" type="text" @*list="SearchGalponID"*@ autocomplete="off" class="FormInput" id="ComboBox"
                            placeholder="-Buscar ID Operario-">
                            

                        @*<datalist id="SearchGalponID">
                            <option value="2">2</option>
                            @* @foreach (var Per in Model.personas)
                                {
                                if (Per.ID_Rol.Equals(1))
                                {
                                <option value="@Per.Id_Persona">@Per.Nombre</option>
                                }
                                } 
                        </datalist> *@

                        <button class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-search" viewBox="0 0 16 16">
                                <path
                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </button>

                    </form>
                </div>




                @if (Model.searchQueried)
                {

                    @if (Model.persona == null || Model.persona.ID_Rol.Equals(2))
                    {
                        <h3 class="clearfix">@Model.Message</h3>
                    }
                    else
                    {
                        if (Model.persona.ID_Rol.Equals(1))
                        {
                            <div style="margin-bottom: 2rem;">
                                <Table class="infoTable">
                                    <tr>
                                        <th>Nombres:</th>
                                        <td id="OperarioNombre">@Model.persona.Nombre</td>
                                        <input type="hidden" name="ID_Trabajador" asp-for="persona.Id_Persona">
                                    </tr>
                                    <tr>
                                        <th>ID Galpon</th>
                                        <td id="OperarioTelefono"> @Model.galpon.ID_Galpon</td>
                                        <input type="hidden" name="ID_Galpon" asp-for="galpon.ID_Galpon">

                                    </tr>
                                    <tr>
                                        <th>Galpon Asignado</th>
                                        <td id="OperarioTelefono">@Model.galpon.Nombre </td>

                                    </tr>
                                </Table>
                            </div>

                        }
                    }
                }


                <div style="display: flex; justify-content: space-around;">
                    @if (Model.persona != null && Model.searchQueried)
                    {
                        <form asp-page-handler="Update_get" method="post">
                            <input type="hidden" name="TempID" asp-for="persona.ID_GalponAsignado">
                            <input type="hidden" name="add" asp-for="persona.ID_GalponAsignado">
                            <input type="hidden" name="ID_Trabajador" asp-for="persona.Id_Persona">
                            <input type="hidden" name="ID_Galpon" asp-for="persona.ID_GalponAsignado">
                            

                            <button class="btn btn-outline-secondary">
                                Agregar Variable
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path
                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                            <input type="hidden" value="31">
                            
                        </form>

                        <form asp-page-handler="readGalpon" method="post">
                            <input type="hidden" name="TemoID" asp-for="persona.ID_GalponAsignado">
                            <input type="hidden" name="search" asp-for="persona.ID_GalponAsignado">
                            <input type="hidden" name="ID_Trabajador" asp-for="persona.Id_Persona">
                            <button class="btn btn-outline-secondary">
                                Lista de Variables  
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path
                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                            <input type="hidden" value="31">
                        </form>

                    }
                </div>
        </body>

    </div>

</div>

@if (Model.add == 0) { }
else
{


    <div class="Transbox">
        <header>
            <h1 class="display-5">Agregar Variable</h1>
        </header>
        <hr>

        <Body>


            <form asp-page-handler="create" method="post">
                <div class="FormContainer">


                    @if (Model.CreateEntry)
                    {
                        <h3 class="clearfix">@Model.Message</h3>
                        <p>@Model.Message</p>
                    }

                    <label for="ID_Trabajador">ID Trabajador </label>
