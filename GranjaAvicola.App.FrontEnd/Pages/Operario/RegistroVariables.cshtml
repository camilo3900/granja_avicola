@if (Model.search == 0) { }
else
{

    <div class="Transbox">
        <header>
            <h1 class="display-5">Lista Variable</h1>
        </header>
        <hr>

        <body>

            <div class="FormContainer">


                @if (Model.searchQueried2)
                {
                    <h3 class="clearfix">@Model.Message</h3>

                    
                    @if (@Model.request == false)
                    {
                        <img src="https://i.ytimg.com/vi/HR7L_mOsa80/maxresdefault.jpg" alt="GODDAMMIT KRISS"
                style="width:700px;height:500px;">
                    }
                    else
                    {
                        

                        <div style="margin-bottom: 2rem;">
                            <Table class="infoTable">

                                <thead>
                                    <tr>
                                        <th scope="col">ID </th>
                                        <th scope="col">Temperatura </th>
                                        <th scope="col">Agua</th>
                                        <th scope="col">Alimento</th>
                                        <th scope="col">Promedio Huevos</th>
                                        <th scope="col">Gallinas Enfermas</th>
                                        <th scope="col">Fecha Registro</th>
                                        <th scope="col">ID Trabajador</th>




                                        
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var Per in Model.registros)
                                    {
                                        if (Per.ID_Galpon.Equals(@Model.galpon.ID_Galpon))
                                        {   
                                            @*
                                            Hacer responsive
                                             *@
                                            <tr>
                                                <td style="text-align: left;">@Per.Id_Registro </td>
                                                <td style="text-align: left;">@Per.Temperatura </td>
                                                <td style="text-align: left;">@Per.Agua</td>
                                                <td style="text-align: left;">@Per.Alimento</td>
                                                <td style="text-align: left;">@Per.PromedioHuevos</td>
                                                <td style="text-align: left;">@Per.GallinasEnfermas</td>
                                                <td style="text-align: left;">@Per.FechaRegistro</td>
                                                <td style="text-align: left;">@Per.ID_Trabajador</td>
                                                

                                            </tr>
                                        }
                                        
                                    }
                                }
                            </tbody>
                        </Table>
                    </div>
                }


                <div style="display: flex; justify-content: space-around;">
                    @if (Model.registro != null && Model.searchQueried)
                    {
                        <form asp-page-handler="Update_get" method="post">
                            <input type="hidden" name="TempID" asp-for="registro.Id_Registro">
                            <button class="btn btn-outline-secondary">
                                Editar
