@page
@model GranjaAvicola.App.FrontEnd.Pages.RegistroVariablesModel
@{
    <title>@ViewData["Title"]Variables</title>
}

<div class="Transbox text-center" style="padding: 10px;">
    <h1 class="display-5"> Registro Variables </h1>
</div>

<div class="Transbox">
    <header>
        <h1 class="display-5">Seleccionar Operario</h1>
    </header>
    <hr>

    <body>

        <div class="FormContainer">
                <form asp-page-handler="read" method="post">
                    <label for="IDSearch" style="padding-right: 1rem;">Buscar Operario</label>
                    <input name="IDSearch" type="text" @*list="SearchGalponID"*@ autocomplete="off" class="FormInput" id="ComboBox" placeholder="-Buscar ID Operario-">

                    <button class="btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-search" viewBox="0 0 16 16">
                            <path
                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </form>

            @if (Model.found)
            {
                if(Model.persona == null || Model.persona.ID_Rol == 2)
                {
                    <h3 class="clearfix">@Model.Message</h3>
                }
                else
                {
                    <h3 class="clearfix">Información:</h3>
                    <table>
                        <tr>
                            <th> Nombre Operario: </th>
                            <td>@Model.persona.Nombre @Model.persona.Apellido</td>
                        </tr>
                        <tr>
                            <th> Galpon a cargo: </th>
                            <td>@Model.galpon.Nombre</td>
                        </tr>
                        <tr>
                            <th> Id Galpon: </th>
                            <td>@Model.galpon.ID_Galpon</td>
                        </tr>
                    </table>
                    if(Model.state == 0)
                    {
                        <div style="display: flex; justify-content: space-evenly; margin-top: 10px;">
                            <form asp-page-handler="CreateNew" method="post">
                                <input type="hidden" name="ID_Operario" asp-for="persona.Id_Persona">
                                <input type="hidden" name="ID_Galpon" asp-for="persona.ID_GalponAsignado">
                                <button class="btn btn-outline-secondary">
                                    Agregar Variable
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path
                                        d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                    </svg>
                                </button>
                            </form>

                            <form asp-page-handler="entryHistory" method="post">
                                <input type="hidden" name="ID_Operario"   asp-for="persona.Id_Persona">
                                <input type="hidden" name="ID_Galpon"       asp-for="persona.ID_GalponAsignado">
                                <button class="btn btn-outline-secondary">
                                    Lista de Variables  
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-stars" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5z"/>
                                        <path d="M2.242 2.194a.27.27 0 0 1 .516 0l.162.53c.035.115.14.194.258.194h.551c.259 0 .37.333.164.493l-.468.363a.277.277 0 0 0-.094.3l.173.569c.078.256-.213.462-.423.3l-.417-.324a.267.267 0 0 0-.328 0l-.417.323c-.21.163-.5-.043-.423-.299l.173-.57a.277.277 0 0 0-.094-.299l-.468-.363c-.206-.16-.095-.493.164-.493h.55a.271.271 0 0 0 .259-.194l.162-.53zm0 4a.27.27 0 0 1 .516 0l.162.53c.035.115.14.194.258.194h.551c.259 0 .37.333.164.493l-.468.363a.277.277 0 0 0-.094.3l.173.569c.078.255-.213.462-.423.3l-.417-.324a.267.267 0 0 0-.328 0l-.417.323c-.21.163-.5-.043-.423-.299l.173-.57a.277.277 0 0 0-.094-.299l-.468-.363c-.206-.16-.095-.493.164-.493h.55a.271.271 0 0 0 .259-.194l.162-.53zm0 4a.27.27 0 0 1 .516 0l.162.53c.035.115.14.194.258.194h.551c.259 0 .37.333.164.493l-.468.363a.277.277 0 0 0-.094.3l.173.569c.078.255-.213.462-.423.3l-.417-.324a.267.267 0 0 0-.328 0l-.417.323c-.21.163-.5-.043-.423-.299l.173-.57a.277.277 0 0 0-.094-.299l-.468-.363c-.206-.16-.095-.493.164-.493h.55a.271.271 0 0 0 .259-.194l.162-.53z"/>
                                    </svg>
                                </button>
                            </form>
                        </div>            
                        @if(Model.upload)
                        {
                            <h3 class="clearfix">@Model.Message</h3>
                        }
                    }
                    if(Model.state == 1)
                    {
                        <h1 class="display-5">Agregar Variable</h1>
                        
                        <form asp-page-handler="addEntry" method="post">
                            <div style="display:flex; align-items: baseline; justify-content: space-around;">
                                <div class="FormContainer">
                                    <label>ID Operario</label>
                                    <input type="number" name="ID_Operario"       class="FormInput" readonly asp-for="persona.Id_Persona">
                                    
                                    <label for="Temperatura">Temperatura </label>
                                    <input type="number" name="Temperatura"         class="FormInput" placeholder="Temperatura (°C)">
                                
                                    <label for="Alimento">Alimento</label>
                                    <input type="number" name="Alimento"            class="FormInput" placeholder="Cantidad (kg)">

                                    <label for="GallinasEnfermas">Gallinas Enfermas</label>
                                    <input type="number" name="GallinasEnfermas"    class="FormInput" placeholder="Gallinas enfermas">
                                </div>

                                <div class="FormContainer">
                                    <label for="ID_Galpon">ID Galpon Asignado</label>
                                    <input type="number" name="ID_Galpon"           class="FormInput" readonly asp-for="galpon.ID_Galpon">
                                    
                                    <label for="Agua">Agua</label>
                                    <input type="number" name="Agua"                class="FormInput" placeholder="Cantidad (L)">
                                
                                    <label for="PromedioHuevos">Promedio Huevos</label>
                                    <input type="number" name="PromedioHuevos"      class="FormInput" placeholder="Promedio Huevos">

                                    <button class="btn btn-outline-secondary" style="margin-top: 2rem;">
                                        Registrar
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                                            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    if(Model.state == 2)
                    {
                        <h1 class="display-5">Historial Registros</h1>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Temperatura (c°)</th>
                                    <th scope="col">Agua (L)</th>
                                    <th scope="col">Alimento (Kg)</th>
                                    <th scope="col">Prom Huevos</th>
                                    <th scope="col">Enfermas</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reg in Model.registros)
                                { 
                                    if(reg.ID_Trabajador.Equals(Model.persona.Id_Persona)){
                                        <tr>
                                            <td style="text-align: left;">@reg.Id_Registro</td>
                                            <td style="text-align: left;">@reg.Temperatura </td>
                                            <td style="text-align: left;">@reg.Agua </td>
                                            <td style="text-align: left;">@reg.Alimento </td>
                                            <td style="text-align: left;">@reg.PromedioHuevos</td>
                                            <td style="text-align: left;">@reg.GallinasEnfermas</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                }
            }          
    </body>
</div>
