                    <label for="Alimento">Alimento</label>
                    <input name="Alimento" class="FormInput" id="NombreGalpon" placeholder="38">
                    <label for="PromedioHuevos">Promedio Huevos</label>
                    <input name="PromedioHuevos" class="FormInput" id="NombreGalpon" placeholder="25">
                    <label for="GallinasEnfermas">Gallinas Enfermas</label>
                    <input name="GallinasEnfermas" class="FormInput" id="NombreGalpon" placeholder="3">

