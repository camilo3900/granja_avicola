@*-
    CRUD [Create]

    Aqui esta todo el html para hacer una entrada nueva a la DB usa un form que tiene como
    web handler el metodo read que esta definido en el modelo.
*@

<div class="Transbox">
    <h1>Añadir Veterinario</h1>
    <div class="row">
        <form asp-page-handler="create" method="post">
            <label> Nombre Veterinario </label>
            <input type="text" name="NombreVeterinario" class="FormInput" id="NombreGalpon" placeholder="Nombre">
            <span asp-validation-for=persona.Nombre class="text-danger" ></span>
            <label for="Telefono"> Telefono</label>
            <input type="text" name="Telefono" class="FormInput" id="NumeroAGalpon" placeholder="(000)000-000">
            <label for="Correo"> Correo </label>
            <input type="email" name="Correo" class="FormInput" id="NumeroAGalpon" placeholder="nombre@ejemplo.com">

            <label for="Genero"> Genero </label>
            <select name ="Genero" class="FormInput" id="Genero">
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
                <option value="Bisexual">Bisexual</option>
                <option value="Intersexual">Intersexual</option>
                <option value="Pansexual">Pansexual</option>
                <option value="Transexual">Transexual</option>
            </select>
            <input type="Text" name="Genero">


            <input type="submit">
        </form>
        @if (Model.upload)
        {
            <div style="padding-left: 50px;">
                <h3 class="clearfix">@Model.Message</h3>
                <p>ID Veterinario: <strong>@Model.Temporal.Id_Persona</strong></p>
                <p>Nombre Veterinario: <strong>@Model.Temporal.Nombre</strong></p>
                <p>Telefono: <strong>@Model.Temporal.Telefono</strong></p>
                <p>Correo: <strong>@Model.Temporal.Correo</strong></p>
                <p>Genero: <strong>@Model.Temporal.Genero</strong></p>
            </div>
        }
    </div>
</div>

