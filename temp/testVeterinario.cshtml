<div class="Transbox">
    <h1> Buscar ID Veterinario </h1>
    <div>
        <form asp-page-handler="read" method="post">
            <input name="lolaso">
            <button class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search"
                    viewBox="0 0 16 16">
                    <path
                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </form>
    </div>
    @if (Model.searchQueried)
    {
        <h3 class="clearfix">@Model.Message</h3>
        @if (Model.persona == null || Model.persona.ID_Rol.Equals(1))
        {
            <img src="https://i.ytimg.com/vi/HR7L_mOsa80/maxresdefault.jpg" alt="GODDAMMIT KRISS"
        style="width:700px;height:500px;">
        }
        else
        {
            if(Model.persona.ID_Rol.Equals(2)){
            <p>ID Veterinario: <strong>@Model.persona.Id_Persona</strong></p>
            <p>Nombre Veterinario: <strong>@Model.persona.Nombre</strong></p>
            <p>Telefono: <strong>@Model.persona.Telefono</strong></p>
            <p>Correo: <strong>@Model.persona.Correo</strong></p>
            <p>Genero: <strong>@Model.persona.Genero</strong></p>
            }
        }
    }
</div>

