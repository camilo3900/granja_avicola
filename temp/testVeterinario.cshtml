*@
<div class="Transbox">
    <h1>Actualizar Veterinarios</h1>
    <div>
        <h3 class="clearfix">@Model.Message</h3>
        <form asp-page-handler="update_get" method="post">
            <input type="text" name="search">
            <button class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search"
                    viewBox="0 0 16 16">
                    <path
                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </form>
    </div>
    <div>
        @if (@Model.updateQueried)
        {
            <form asp-page-handler="update_set" method="post">
                <label> ID Veterinario </label>
                <input type="number" name="Update_VeterinarioID" readonly asp-for="persona.Id_Persona">
                <label> Nombre Veterinario </label>
                <input type="text" name="Update_NombreVeterinario" asp-for="persona.Nombre">
                <label> Telefono</label>
                <input type="number" name="Update_Telefono" asp-for="persona.Telefono">
                <label> Correo </label>
                <input type="email" name="Update_Correo" asp-for="persona.Correo">
                @* <label> Genero </label>
                <input type="text" name="Update_Genero" asp-for="persona.FechaSalida"> *@

                <label > Genero </label>
            <select @*asp-for="persona.Genero"*@ class="FormInput" id="Genero">
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
                <option value="Bisexual">Bisexual</option>
                <option value="Intersexual">Intersexual</option>
                <option value="Pansexual">Pansexual</option>
                <option value="Transexual">Transexual</option>
            </select>
            <input type="Text" name="Update_Genero" asp-for="persona.Genero">

                <button class="btn btn-outline-secondary">Actualizar</button>
            </form>
        }
    </div>

</div>

